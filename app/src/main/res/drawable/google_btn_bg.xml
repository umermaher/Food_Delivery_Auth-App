<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#F45541">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="40sp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#DD4B39"
                android:startColor="#DD4B39"
                android:endColor="#DD4B39"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="55dp"
                />
        </shape>
    </item>
</ripple>